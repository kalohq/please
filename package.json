{
  "name": "please-runner",
  "version": "1.1.1",
  "description": "The polite script runner",
  "bin": {
    "please": "bin/please"
  },
  "scripts": {
    "prepublish": "bin/please manpages",
    "develop": "node-dev --respawn --no-notify --no-deps test/",
    "test": "eslint . && node test/"
  },
  "engines": {
    "node": ">= 4.0.0"
  },
  "files": [
    "**/*.js",
    "!/test.js",
    "/bin/",
    "/Readme.md",
    "/License.md",
    "/manpages/"
  ],
  "man": [
    "/manpages/please.1"
  ],
  "license": "MIT",
  "keywords": [
    "cli",
    "tool"
  ],
  "author": "Tomek Wiszniewski <t.wiszniewski@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:lystable/please"
  },
  "dependencies": {
    "chalk": "^2.3.0",
    "hasbin": "^1.2.3",
    "mode-to-permissions": "0.0.2",
    "tiny-error": "^1.0.2"
  },
  "devDependencies": {
    "eslint": "^4.9.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^2.3.1",
    "marked-man": "^0.1.5",
    "mock-fs": "^4.4.2",
    "node-dev": "^3.1.3",
    "prettier": "^1.7.4",
    "proxyquire": "^1.7.10",
    "sinon": "^1.17.5",
    "strip-ansi": "^4.0.0",
    "tap-spec-integrated": "^1.0.1",
    "tape": "^4.6.0",
    "tape-catch": "^1.0.6"
  }
}
